datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id       String     @id @default(cuid())
  name     String?
  email    String?    @unique
  image    String?
  role     UserRole   @default(USER)
  Document Document[]
  Category Category[]
}

model Category {
  id   String  @id @default(cuid())
  name String?

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Document  Document[]

  @@index([userId])
}

model Document {
  id         String  @id @default(cuid())
  content    Json
  coverImage String?
  title      String  @unique

  // categoryId String
  // category   Category @relation(fields: [categoryId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}
